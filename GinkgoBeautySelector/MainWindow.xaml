<ui:FluentWindow
  x:Class="GinkgoBeautySelector.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:GinkgoBeautySelector"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
  Title="MainWindow"
  Width="700"
  Height="450"
  ExtendsContentIntoTitleBar="True"
  Icon="/Beauty.png"
  WindowBackdropType="Mica"
  WindowCornerPreference="Default"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">

  <ui:FluentWindow.DataContext>
    <local:MainViewModel />
  </ui:FluentWindow.DataContext>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <ui:TitleBar Title="银杏美人吧" Height="32">
      <ui:TitleBar.Icon>
        <ui:ImageIcon Source="pack://application:,,,/GinkgoBeautySelector;component/Beauty.png" />
      </ui:TitleBar.Icon>
      <ui:TitleBar.Header>
        <Grid VerticalAlignment="Stretch">
          <TextBlock
            VerticalAlignment="Center"
            Foreground="Orange"
            Text="{Binding Title, RelativeSource={RelativeSource AncestorType={x:Type ui:TitleBar}}}" />
        </Grid>
      </ui:TitleBar.Header>
    </ui:TitleBar>
    <StackPanel Grid.Row="1" Margin="12">
      <TextBlock
        Margin="12,0"
        Foreground="Gray"
        LineHeight="26"
        Text="银杏美人吧基于深度学习和计算机视觉领域的尖端YOLO11模型，快速检测并筛选出需要的美女图片。&#x000A;请注意备份您的图片文件夹，程序运行过程中会删除不符合条件的图片，操作不可逆。" />
      <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
        <Button
          Margin="12,0,0,0"
          Command="{Binding SelectFolderCommand}"
          Content="选择文件夹" />
        <CheckBox Content="包含子文件夹" IsChecked="{Binding IsIncludeSubFolder}" />
      </StackPanel>
      <TextBlock
        Margin="12,8,0,0"
        Foreground="Gray"
        Text="{Binding SelectedFolderDescription}" />

      <StackPanel Margin="0,16,0,0" Orientation="Horizontal">
        <CheckBox Content="删除不包含人类的图片" IsChecked="{Binding IsDeleteNoneHuman}" />
        <TextBlock
          Margin="100,0,0,0"
          VerticalAlignment="Center"
          Foreground="Gray"
          Text="删除风景、美食、宠物等不包含人类的图片。" />
      </StackPanel>
      <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
        <CheckBox
          Content="仅保留女性人物图片(正在实现...)"
          Cursor="Hand"
          IsChecked="{Binding IsOnlyKeepFemale}" />
        <TextBlock
          Margin="38,0,0,0"
          VerticalAlignment="Center"
          Foreground="Gray"
          Text="仅保留女性图片。如果图片中包含男性人物，将被删除。" />
      </StackPanel>
      <Button
        Width="120"
        Margin="12,32,0,0"
        Command="{Binding RunCommand}"
        Content="开始执行"
        Foreground="Orange" />
    </StackPanel>

    <Grid Grid.Row="2">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <TextBlock Margin="8,2" Text="{Binding StatusDescription}" />
      <ProgressBar
        x:Name="progress"
        Grid.Row="1"
        Height="4"
        Maximum="1"
        Minimum="0"
        Style="{x:Null}"
        Value="{Binding Progress}" />
    </Grid>
  </Grid>
</ui:FluentWindow>
